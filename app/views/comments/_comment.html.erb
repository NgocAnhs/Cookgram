<%= form_for @comment = Comment.new, remote: true do |f| %>
  <%= f.hidden_field :recipe_id, value: recipe.id %>
  <%= f.text_field :content, class: "base-border-rounded form-control w-75 d-inline", placeholder: t('input_comment'), autocomplete: :off %>
  <%= button_tag(type: "submit", class: "btn base-border-rounded base-border-color", 'data-disable-with' => "<i class='fa fa-spinner fa-spin'></i>".html_safe) do %>
    <i class="fas fa-paper-plane"></i>
  <% end %>
<% end %>