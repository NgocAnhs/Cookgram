<button type="button" class="close ml-auto p-2" data-dismiss="modal" style="color:green">&times;</button>
<div class="modal-body pt-0">
  <div class="row">
    <div class="col-5">
      <div class="box-img base-border-rounded" style="border:2px solid green">
      <%= image_tag recipe.image, class:"mw-100 base-border-rounded" %>
    </div>
    <div class="recipe-info">
      <h5>Rating</h5>
      <h5>Love</h5>
      <h5>Comment</h5>
      <h5>Chef</h5>
    </div>
    </div>
    <div class="col-7">
      <h3 class="base-color-text text-center font-weight-bold"><%= recipe.title %></h3>
      <hr>
      <div id="ingredients">
        <h5>Ingredients:</h5>
        <% recipe.ingredients.each.with_index do |ingredient, index| %>
          <p class="ml-1"><%= "#{index + 1}. #{ingredient.name}" %></p>
        <% end %>
      </div>
      <%= link_to 'Xem Chi Tiáº¿t', recipe_path(recipe), class: "btn btn-highlight d-block" %>
    </div>
  </div>
</div>
