<div class="nested-fields">
  <div class="form-inline d-flex justify-content-center">
    <%= f.text_area :content, rows: 8, class: "form-control base-border-rounded flex-grow-1 mr-2  " %>
    <label style="width:210px;height:210px;border:1px dashed green;background-color:whitesmoke" class="mx-2 base-border-rounded">
      <%= f.file_field :step_images, multiple: true, class: 'd-none' %>
    <div class="preview d-flex flex-wrap justify-content-around align-items-center" style="width:100%;height:100%; padding: 1px">
      <div class="text-center" style="color:gray">
      <i class="fas fa-camera fa-3x"></i><br>
      <i>Click để đăng hình</i><br>
      <small>(Tối đa 4 hình)</small>
      
      </div>
      
    </div>
    </label>
    
    <%= f.hidden_field :_destroy %>
    <%= link_to_remove_association "<i class='fas fa-times fa-lg' aria-hidden='true'></i>".html_safe, f, class: "remove-field hide-text rounded-circle base-color" %>
  </div>
  <hr>
</div>
