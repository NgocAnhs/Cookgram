<div class="box-user rounded-circle col-md-2 text-center">
  <%= link_to user_path(user) do %>
    <%= image_tag user.avatar_size(:normal), class: "rounded-circle" %>
  <% end %>
  <%= link_to user.full_name, user_path(user), class: "font-weight-bold text-decoration-none" %> <br>
  <i><%= user.followers.size %> followers</i>
</div>